{
  "name": "parking-garage-api",
  "version": "1.0.0",
  "description": "RESTful API for managing parking garage operations",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "node src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:js": "nodemon src/server.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/**/*.json dist/ 2>/dev/null || true",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --verbose",
    "test:unit": "jest --testPathPattern=tests/unit --verbose",
    "test:ts": "jest --testPathPattern=\".*\\.test\\.ts$\" --verbose",
    "test:js": "jest --testPathPattern=\".*\\.test\\.js$\" --verbose",
    "test:all": "jest --testPathPattern=tests --verbose",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "screenshots": "node scripts/capture-screenshots.js",
    "screenshots:help": "echo 'Captures screenshots of enhanced API interface with populated data. Requires both API server (npm start) and docs server (cd docs && python3 -m http.server 9000) to be running.'"
  },
  "keywords": [
    "api",
    "parking",
    "garage",
    "express",
    "nodejs"
  ],
  "author": "Parking Garage Management System",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^8.45.0",
    "@playwright/test": "^1.55.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/helmet": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "babel-jest": "^30.1.1",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
