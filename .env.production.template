# ==============================================================================
# Production Environment Configuration Template
# ==============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# ==============================================================================
# Application Configuration
# ==============================================================================
NODE_ENV=production
APP_PORT=3000
LOG_LEVEL=info
VERSION=1.0.0

# ==============================================================================
# Security Configuration (REQUIRED)
# ==============================================================================
# Generate secure random strings for these values
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-here-minimum-32-characters
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_URL=file:/app/data/parkinggarage.db

# ==============================================================================
# Redis Configuration (Optional)
# ==============================================================================
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# ==============================================================================
# Rate Limiting Configuration
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ==============================================================================
# Email Configuration (Optional)
# ==============================================================================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# ==============================================================================
# Monitoring and Performance
# ==============================================================================
ENABLE_METRICS=true
SENTRY_DSN=https://your-sentry-dsn-here
PERFORMANCE_MONITORING=true

# ==============================================================================
# Feature Flags
# ==============================================================================
ENABLE_SWAGGER=false
ENABLE_STATUS_MONITOR=false

# ==============================================================================
# Backup Configuration
# ==============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_ENABLED=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=your-backup-bucket

# ==============================================================================
# Network Configuration
# ==============================================================================
HTTP_PORT=80
HTTPS_PORT=443
NGINX_HOST=yourdomain.com
METRICS_PORT=9100

# ==============================================================================
# SSL Configuration
# ==============================================================================
SSL_CERT_PATH=./ssl

# ==============================================================================
# Health Check Configuration
# ==============================================================================
HEALTH_CHECK_INTERVAL=300
NOTIFICATION_WEBHOOK=https://hooks.slack.com/your-webhook
ALERT_EMAIL=admin@yourdomain.com

# ==============================================================================
# Build Configuration
# ==============================================================================
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=latest