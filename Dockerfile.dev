# ==============================================================================
# Development Dockerfile for ParkingGarage Application
# ==============================================================================

FROM node:18-alpine

# Install development dependencies
RUN apk add --no-cache \
    curl \
    git \
    sqlite \
    python3 \
    make \
    g++

# Create app directory
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S parkinggarage -u 1001 -G nodejs

# Change ownership of app directory
RUN chown -R parkinggarage:nodejs /app

# Switch to non-root user
USER parkinggarage:nodejs

# Copy package files
COPY --chown=parkinggarage:nodejs package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci --include=dev --no-audit --no-fund

# Copy source code
COPY --chown=parkinggarage:nodejs . .

# Create necessary directories
RUN mkdir -p data logs backups uploads temp

# Expose port
EXPOSE 3000
EXPOSE 9229

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/api/v1/health || exit 1

# Start development server
CMD ["npm", "run", "dev"]